

<%= form_tag search_products_path, :method => :get, :class => "products-search-form" do %>
            <div class="search-bar">
                <div id="custom-search-input">
                    <div class="input-group input-lg ">
                      <input type="text" class="form-control search-bar-input" name="q" value="<%= params[:q] %>" placeholder="产品关键字...">
                        <span class="input-group-btn">
                            <button type="submit" class="btn btn-default search-bar-submit">
                                <i class="glyphicon glyphicon-search"></i>
                            </button>
                        </span>
                    </div>
                </div>
            </div>

<% end %>
