<div class="panel panel-default">
  <div class="panel-body">
    <div id="search-page" class="container-fluid products-show-page">
      <div class="col-md-10 col-md-offset-1">
        <br>
        <div class="pull-right">
          <%= link_to(content_tag(:i, " 查看所有产品", class: "fa fa-reply-all"), products_path) %> |
          <%= link_to(content_tag(:i, "返回", class: "fa fa-arrow-left"), url_for(:back)) %>
        </div>


    </div>
    <div>
      <br>
    <% if @query_string.blank? %>
        <div class="search-info-title">
          Sorry, The search content cannot be blank, please type some product into to search.
        </div>

      <% elsif @products.blank? %>
        <br>
        <h3 class="search-info-title">没找到匹配信息，请重新搜索</h3>
      <% else %>
        <h3 class="search-info-title"> 名称包含"<%= @query_string %>"的<span style="color:blue">
          <%= @products.count %> </span> 个产品 </h3>
        <div class="search-result">

          <div class="row products-show"></div>
          <div class="product-table">
            <% @products.each do |product| %>
            <div class="row products-show">

              <div class="col-md-12 col-lg-9 col-lg-offset-1">

                <div class="pull-right">
                  发布时间：<%= product.created_at.to_date %>
                </div>
                <p ><%= link_to(render_highlight_content(product,@query_string),product_path(product)) %></p>

              </div>
            </div>
            <% end %>
          </div>
        </div>
        <div class="text-center">
          <%= will_paginate(@products, renderer: BootstrapPagination::Rails) %>
        </div>
      <% end %>
    </div>

  </div>
</div>
