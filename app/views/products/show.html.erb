<div class="row">
  <div class="col-md-6">
    <% if @product.photos.present? %>
      <div class="tab-content show-picture">
        <% @photos.each_with_index do |product,index| %>
          <% if index < 5 %>
          <!-- 用each_with_index记录，第一张(index ==0)時，显示大图，其余显示小图(thumb) -->
            <div class= "tab-pane fadein <%= render_active(index) %>" id="<%= index %>">
              <!-- 为达到点击轮播效果，采用了rails内建的tap pane 选项卡窗格的写法 -->
              <%= image_tag product.image.medium.url %>
            </div>
          <% end %>
        <% end %>
      </div>

      <ul class="show-photo-xsmall-box nav nav-tabs">
         <% @photos.each_with_index do |product,index| %>
           <% if index <5 %>
             <li><a href="#<%= index %>" data-toggle="tab"><%= image_tag product.image.small.url%></a></li>
           <% end %>
         <% end %>
       </ul>
    <% else %>
      <%= image_tag("http://placehold.it/400x400&text=No Pic", class:"thumbnail") %>
    <% end %>
  </div>
  <div class="col-md-6">
    <h2> <%= @product.title %> </h2>
    <div style="height:100px;">
      <p>
        <%= @product.description %>
      </p>
    </div>
    <div> 数量 : <%= @product.quantity %> </div>
    <div class="product-price">价格 :  ￥ <%= @product.price %> </div>
    <div class="pull-right">
      <% if @product.quantity.present? && @product.quantity > 0 %>
        <%= link_to("加入购物车", add_to_cart_product_path(@product), :method => :comment, :class => "btn btn-danger btn-lg") %>
      <% else %>
        已销售一空，无法购买
      <% end %>
    </div>
    <div>类别 ：<%= @product.category.name %></div>
  </div>
</div>

